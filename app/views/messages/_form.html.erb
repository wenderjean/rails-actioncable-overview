<%= simple_form_for @message, remote: true do |f| %>
  <%= f.input :chatroom_id, as: :hidden, input_html: { value: @chatroom.id } %>
	<%= f.input :content, as: :text, class: 'form-control' %>
	<%= f.submit 'Send', class: 'btn btn-primary' %>
	<%= link_to chatrooms_url, class: 'btn btn-danger' do %>
		<i class="glyphicon glyphicon-log-out"></i>
	<% end %>
<% end %>
